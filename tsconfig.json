{
  "extends": "@tsconfig/node14/tsconfig.json", // https://github.com/tsconfig/bases#node-14-tsconfigjson
  "compilerOptions": {
    "removeComments": true,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
  },
  // include src and test folder to enable type checking
  // only the src folder will be compiled to dist and published as package
  "include": [
    "index.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}