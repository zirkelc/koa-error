    "@typescript-eslint/parser": "^5.15.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "istanbul": "^0.4.5",
    "koa": "^2.4.1",
    "mocha": "^10.0.0",
    "prettier": "^2.6.0",
    "supertest": "^6.2.3",
